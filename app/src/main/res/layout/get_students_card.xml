<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:clickable="true"
    app:cardBackgroundColor="@color/purpleShade"
    app:cardCornerRadius="4dp"
    android:layout_marginBottom="5dp"
    android:focusable="true">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="5dp"
        android:paddingEnd="5dp"
        android:orientation="horizontal">

        <com.mikhaellopez.circularimageview.CircularImageView
            android:layout_width="80dp"
            android:id="@+id/tui_stu_Image_id"
            android:layout_height="80dp"
            android:layout_alignParentEnd="true"
            android:background="@drawable/user"
            android:layout_marginEnd="20dp"
            />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >


        <TextView
            android:id="@+id/StudentNameTextIdCard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Student"
            android:maxLines="1"
            android:padding="6dp"
            android:textSize="18sp"
            android:textColor="@android:color/black"
            />

            <TextView
                android:id="@+id/dateId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_gravity="end"
                android:maxLines="1"
                android:gravity="end"
                android:padding="6dp"
                android:textSize="18sp"
                android:text="ID"
                android:textColor="@android:color/holo_red_dark" />

        </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:padding="4dp"
                        android:textColor="#000000"
                        android:text="Registration Fee Status-"/>

                <TextView
                    android:id="@+id/RegAmountPaidStatusId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                  android:padding="4dp"
                    android:textSize="15sp"
                    android:text="UnPaid"
                    android:layout_marginEnd="10dp"
                    android:textColor="@android:color/black" />
                </LinearLayout>





            </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"

            android:padding="4dp"
            android:textColor="#000000"
            android:text="Monthly Fee Status-"/>



        <TextView
            android:id="@+id/MonthlyAmountStatusId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:padding="4dp"
            android:text="UnPaid"
            android:textColor="@android:color/holo_red_dark" />
    </LinearLayout>


    </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>