<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/purpleShade"
    tools:context=".EditTuitionInfo">



    <include layout="@layout/toolbar_layout"
        android:id="@+id/EditTuiInfoToolbar"/>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="10dp">


            <com.mikhaellopez.circularimageview.CircularImageView
                android:id="@+id/TuiprofileEditImageID"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:background="@drawable/camera"
               />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_marginTop="20dp"

                android:layout_width="match_parent"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_height="wrap_content"
                app:errorEnabled="true"

                android:hint="Name"
                android:paddingStart="20dp"
                android:paddingEnd="20dp">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/text_Tui_input_name_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:paddingLeft="10dp"
                    android:textColor="@android:color/black"
                    android:textStyle="bold" />
            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.textfield.TextInputLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Phone Number"
                android:layout_marginTop="5dp"
                app:errorEnabled="true"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:paddingStart="20dp"
                android:paddingEnd="20dp">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/text_Tui_input_phone_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="phone"
                    android:maxLength="10"
                    android:paddingLeft="10dp"
                    android:textColor="@android:color/black"
                    android:textStyle="bold" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:errorEnabled="true"
                android:layout_marginTop="5dp"
                android:hint="Email"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
              >
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/text_Tui_input_email_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:layout_marginBottom="10dp"

                    android:inputType="textEmailAddress"
                    android:paddingStart="10dp"
                    android:textColor="@android:color/black"
                    android:textStyle="bold"
                    tools:ignore="RtlSymmetry" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="20dp"
                android:layout_marginTop="5dp"

                android:hint="Address"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:paddingEnd="20dp"
                app:errorEnabled="true"
                >
                <com.google.android.material.textfield.TextInputEditText

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:layout_marginBottom="10dp"
                    android:id="@+id/text_input_Tui__Address_id"
                    android:inputType="textMultiLine"
                    android:paddingLeft="10dp"
                    android:textColor="@android:color/black"
                    android:textStyle="bold" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Admin 1"
                android:paddingStart="20dp"
                android:layout_marginTop="5dp"
                android:paddingEnd="20dp"
                app:errorEnabled="true"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                >
                <com.google.android.material.textfield.TextInputEditText

                    android:layout_width="match_parent"
                    android:id="@+id/text_Tui_input_Admin1_id"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:layout_marginBottom="10dp"

                    android:inputType="text"
                    android:paddingLeft="10dp"
                    android:textColor="@android:color/black"
                    android:textStyle="bold" />

            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Admin 2"
                android:paddingStart="20dp"

                android:layout_marginTop="5dp"
                android:paddingEnd="20dp"
                app:errorEnabled="true"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                >
                <com.google.android.material.textfield.TextInputEditText

                    android:layout_width="match_parent"
                    android:id="@+id/text_Tui_input_Admin2_id"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:layout_marginBottom="10dp"

                    android:inputType="text"
                    android:paddingLeft="10dp"
                    android:textColor="@android:color/black"
                    android:textStyle="bold" />

            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.button.MaterialButton
                android:id="@+id/Tui_btn1Id"
                android:layout_width="120dp"
                android:layout_height="60dp"
                android:layout_gravity="end"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="10dp"
                android:layout_marginEnd="20dp"
                android:text="Update"
                android:backgroundTint="@color/colorPrimary"
                app:cornerRadius="20dp"


                />
        </LinearLayout>
    </ScrollView>

</LinearLayout>