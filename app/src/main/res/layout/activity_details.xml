<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="15dp"
    tools:context=".Students.DetailsActivity">

    <include layout="@layout/toolbar_layout"
        android:id="@+id/DetailsToolbar"/>

        <RelativeLayout
            android:layout_below="@+id/DetailsToolbar"
            android:id="@+id/rellay1"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@drawable/grad"
            android:paddingBottom="10dp">

            <RelativeLayout
                android:id="@+id/imgUser"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
              >

                <com.mikhaellopez.circularimageview.CircularImageView
                    android:id="@+id/ProfileImageID"
                    android:layout_width="100dp"
                    android:layout_height="100dp"

                    app:civ_border_color="#0C0C0C"
                    app:civ_border_width="1dp"
                    app:civ_shadow="true"
                    app:civ_shadow_radius="2dp"
                    app:civ_shadow_color="#0C0C0C"
                    android:src="@drawable/ic_add_person" />

            </RelativeLayout>

            <TextView
                android:id="@+id/DetailNameTextID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/imgUser"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15sp"
                android:fontFamily="sans-serif-light"
                android:text="Name"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:textSize="20sp" />

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/linlay1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rellay1"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="#1BC3C3"
                android:gravity="left"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                tools:ignore="RtlHardcoded">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:gravity="left"
                    android:orientation="vertical">


                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-light"
                        android:text="RegistrationID"
                        android:textColor="#FFFFFF"
                        android:textStyle="italic"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/IDTextViewId"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-light"
                        android:text="RegistrationID"
                        android:textStyle="bold"
                        android:textColor="#FFFFFF"
                        android:textSize="18sp" />

                </LinearLayout>


            </RelativeLayout>

        </LinearLayout>


    <ScrollView
        android:layout_below="@+id/linlay1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="ScrollViewCount">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/rellay2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/linlay1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginBottom="20dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Phone"
                                android:textColor="@color/heading"
                                android:textSize="13sp"

                                />

                            <LinearLayout
                                android:id="@+id/PhoneEditButtonId"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="end"
                                android:clickable="true"
                                android:layout_alignParentEnd="true"
                                android:focusable="true">

                                <ImageView
                                    android:paddingTop="2dp"
                                    android:layout_width="14dp"
                                    android:layout_height="13dp"
                                    android:src="@drawable/ic_edit"
                                    android:layout_alignParentEnd="true"
                                    android:layout_gravity="end"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Edit"
                                    android:textSize="13sp"
                                    android:paddingEnd="2dp"
                                    android:textColor="@color/colorPrimary"
                                    tools:ignore="RtlSymmetry" />

                            </LinearLayout>

                        </RelativeLayout>

                        <LinearLayout
                            android:id="@+id/HiddenPhoneLinearLayoutId"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:visibility="gone"
                            android:orientation="horizontal">
                            <EditText
                                android:layout_width="150dp"
                                android:layout_height="wrap_content"
                                android:id="@+id/PhoneEditTextEditId"
                                android:hint="Phone Number"
                                />
                            <ImageView
                                android:clickable="true"
                                android:id="@+id/PhoneDoneImageId"
                                android:layout_marginTop="20dp"
                                android:layout_width="wrap_content"
                                android:layout_height="20dp"
                                android:src="@drawable/ic_done"/>

                        </LinearLayout>

                        <TextView
                            android:id="@+id/PhoneId"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif-light"
                            android:text="Phone"
                            android:textColor="#000000"
                            android:textSize="18sp" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="15dp"
                            android:background="@color/grey" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Email"
                                android:textColor="@color/heading"
                                android:textSize="13sp"

                                />

                            <LinearLayout
                                android:id="@+id/EmailEditButtonId"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="end"
                                android:clickable="true"
                                android:layout_alignParentEnd="true"
                                android:focusable="true">

                                <ImageView
                                    android:paddingTop="2dp"
                                    android:layout_width="14dp"
                                    android:layout_height="13dp"
                                    android:src="@drawable/ic_edit"
                                    android:layout_alignParentEnd="true"
                                    android:layout_gravity="end"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Edit"
                                    android:textSize="13sp"
                                    android:paddingEnd="2dp"
                                    android:textColor="@color/colorPrimary"
                                    tools:ignore="RtlSymmetry" />

                            </LinearLayout>

                        </RelativeLayout>

                        <LinearLayout
                            android:id="@+id/HiddenEmailLinearLayoutId"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:visibility="gone"
                            android:orientation="horizontal">
                            <EditText
                                android:layout_width="200dp"
                                android:layout_height="wrap_content"
                                android:id="@+id/EmailEditTextEditId"
                                android:hint="Email Address"
                                />
                            <ImageView
                                android:clickable="true"
                                android:id="@+id/EmailDoneImageId"
                                android:layout_marginTop="20dp"
                                android:layout_width="wrap_content"
                                android:layout_height="20dp"
                                android:src="@drawable/ic_done"/>

                        </LinearLayout>



                        <TextView
                            android:id="@+id/EmailId"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif-light"
                            android:text="Email"
                            android:textColor="#000000"
                            android:textSize="18sp" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="15dp"
                            android:background="@color/grey" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:orientation="vertical">
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Address"
                                android:textColor="@color/heading"
                                android:textSize="13sp"

                                />

                            <LinearLayout
                                android:id="@+id/AddressEditButtonId"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="end"
                                android:clickable="true"
                                android:layout_alignParentEnd="true"
                                android:focusable="true">

                                <ImageView
                                    android:paddingTop="2dp"
                                    android:layout_width="14dp"
                                    android:layout_height="13dp"
                                    android:src="@drawable/ic_edit"
                                    android:layout_alignParentEnd="true"
                                    android:layout_gravity="end"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Edit"
                                    android:textSize="13sp"
                                    android:paddingEnd="2dp"
                                    android:textColor="@color/colorPrimary"
                                    tools:ignore="RtlSymmetry" />

                            </LinearLayout>

                        </RelativeLayout>

                        <LinearLayout
                            android:id="@+id/HiddenAddressLinearLayoutId"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:visibility="gone"
                            android:orientation="horizontal">
                            <EditText
                                android:layout_width="200dp"
                                android:layout_height="wrap_content"
                                android:id="@+id/AddressEditTextEditId"
                                android:hint="Address"
                                android:inputType="textMultiLine"

                                />
                            <ImageView
                                android:clickable="true"
                                android:id="@+id/AddressDoneImageId"
                                android:layout_marginTop="20dp"
                                android:layout_width="wrap_content"
                                android:layout_height="20dp"
                                android:src="@drawable/ic_done"/>

                        </LinearLayout>

                        <TextView
                            android:id="@+id/AddressId"
                            android:maxLines="2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif-light"
                            android:text="Address"
                            android:textColor="#000000"
                            android:textSize="18sp" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="15dp"
                            android:background="@color/grey" />


                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:orientation="vertical">


                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Gender"
                            android:textColor="@color/heading"
                            android:textSize="13sp"

                            />

                            <LinearLayout
                                android:id="@+id/genderEditButtonId"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="end"
                                android:clickable="true"
                                android:layout_alignParentEnd="true"
                                android:focusable="true">

                            <ImageView
                                android:paddingTop="2dp"
                                android:layout_width="14dp"
                                android:layout_height="13dp"
                                android:src="@drawable/ic_edit"
                                android:layout_alignParentEnd="true"
                                android:layout_gravity="end"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Edit"
                                android:textSize="13sp"
                                android:paddingEnd="2dp"
                                android:textColor="@color/colorPrimary"
                                tools:ignore="RtlSymmetry" />

                            </LinearLayout>

                        </RelativeLayout>

                        <LinearLayout
                            android:id="@+id/HiddenGenderLinearLayoutId"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:visibility="gone"
                            android:orientation="horizontal">
                            <Spinner
                                android:id="@+id/GenderSpinnerId"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="30dp"
                                android:layout_marginTop="30dp"
                                android:layout_marginRight="100dp"
                                android:layout_marginBottom="10dp"
                                android:layout_toEndOf="@+id/DummytxtId"
                                android:paddingLeft="10dp">

                            </Spinner>

                        </LinearLayout>

                        <TextView
                            android:id="@+id/GenderId"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif-light"
                            android:text="Gender"
                            android:textColor="#000000"
                            android:textSize="18sp" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="15dp"
                            android:background="@color/grey" />


                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Education"
                                android:textColor="@color/heading"
                                android:textSize="13sp"

                                />

                            <LinearLayout
                                android:id="@+id/EducationEditButtonId"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="end"
                                android:clickable="true"
                                android:layout_alignParentEnd="true"
                                android:focusable="true">

                                <ImageView
                                    android:paddingTop="2dp"
                                    android:layout_width="14dp"
                                    android:layout_height="13dp"
                                    android:src="@drawable/ic_edit"
                                    android:layout_alignParentEnd="true"
                                    android:layout_gravity="end"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Edit"
                                    android:textSize="13sp"
                                    android:paddingEnd="2dp"
                                    android:textColor="@color/colorPrimary"
                                    tools:ignore="RtlSymmetry" />

                            </LinearLayout>

                        </RelativeLayout>

                        <LinearLayout
                            android:id="@+id/HiddenEducationLinearLayoutId"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:visibility="gone"
                            android:orientation="horizontal">
                            <EditText
                                android:layout_width="100dp"
                                android:layout_height="wrap_content"
                                android:id="@+id/EducationEditTextEditId"
                                android:hint="Education"
                                android:inputType="textMultiLine"

                                />
                            <ImageView
                                android:clickable="true"
                                android:id="@+id/EducationDoneImageId"
                                android:layout_marginTop="20dp"
                                android:layout_width="wrap_content"
                                android:layout_height="20dp"
                                android:src="@drawable/ic_done"/>

                        </LinearLayout>

                        <TextView
                            android:id="@+id/EducationId"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif-light"
                            android:text="Education"
                            android:textColor="#000000"
                            android:textSize="18sp" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="15dp"
                            android:background="@color/grey" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Cast"
                                android:textColor="@color/heading"
                                android:textSize="13sp"

                                />

                            <LinearLayout
                                android:id="@+id/CastEditButtonId"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="end"
                                android:clickable="true"
                                android:layout_alignParentEnd="true"
                                android:focusable="true">

                                <ImageView
                                    android:paddingTop="2dp"
                                    android:layout_width="14dp"
                                    android:layout_height="13dp"
                                    android:src="@drawable/ic_edit"
                                    android:layout_alignParentEnd="true"
                                    android:layout_gravity="end"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Edit"
                                    android:textSize="13sp"
                                    android:paddingEnd="2dp"
                                    android:textColor="@color/colorPrimary"
                                    tools:ignore="RtlSymmetry" />

                            </LinearLayout>

                        </RelativeLayout>

                        <LinearLayout
                            android:id="@+id/HiddenCastLinearLayoutId"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:visibility="gone"
                            android:orientation="horizontal">
                            <Spinner
                                android:id="@+id/CastSpinnerId"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="30dp"
                                android:layout_marginTop="30dp"
                                android:layout_marginRight="100dp"
                                android:layout_marginBottom="10dp"
                                android:layout_toEndOf="@+id/DummytxtId"
                                android:paddingLeft="10dp">

                            </Spinner>

                        </LinearLayout>

                        <TextView
                            android:id="@+id/CastId"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif-light"
                            android:text="Cast"
                            android:textColor="#000000"
                            android:textSize="18sp" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="15dp"
                            android:background="@color/grey" />


                    </LinearLayout>





                </LinearLayout>


            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/rellay2">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:text="Registered Subjects"
                        android:textColor="@color/heading"
                        android:textSize="13sp" />


                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/RegisteredSubRecyclerView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />


                </LinearLayout>


            </RelativeLayout>

        </LinearLayout>

    </ScrollView>


</RelativeLayout>