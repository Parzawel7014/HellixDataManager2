<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/grad"
    tools:context=".Batches.BatchesActivity">


    <include
        android:id="@+id/BatchesActivityToolbar"
        layout="@layout/toolbar_layout" />


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/RecyclerVieId"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/BatchesActivityToolbar"
        android:padding="1dp"
        android:scrollbars="vertical" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/SubjectFloatingButtonId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:backgroundTint="@color/purpleShade"
        android:src="@drawable/ic_add_floating" />

</RelativeLayout>