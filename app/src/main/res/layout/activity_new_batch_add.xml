<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Batches.NewBatchAddActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:padding="10dp"
            android:paddingTop="20dp"
            android:text="Add Batch"
            android:textAllCaps="true"
            android:textColor="@android:color/black"
            android:textSize="40sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/BatchNameId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:layout_marginBottom="10dp"
            android:hint="Batch Name"
            android:inputType="text"
            android:paddingStart="10dp"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:focusable="false"
            tools:ignore="RtlSymmetry" />

        <EditText
            android:id="@+id/BatchTimeId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="10dp"
            android:hint="Batch Time"
            android:inputType="datetime"
            android:paddingLeft="10dp"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:focusable="false" />

        <EditText
            android:id="@+id/BatchTeacherId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="10dp"
            android:hint="Batch Teacher"
            android:inputType="text"
            android:paddingLeft="10dp"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            />


        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add Batch"
            android:clickable="false"
            android:id="@+id/addBatchButton"/>
    </LinearLayout>
</LinearLayout>