<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.ConfirmationFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">


    <TextView
        android:id="@+id/nameTextConfirmId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name" />

    <TextView
        android:id="@+id/addressTextConfirmId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Address" />

    <TextView
        android:id="@+id/PhoneTextConfirmId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Phone" />

      <TextView
          android:id="@+id/batchTimingId"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="Batch Timing"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Subjects"
            android:id="@+id/subjectTextId"/>
    </LinearLayout>

</FrameLayout>