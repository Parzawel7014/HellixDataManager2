<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/purpleShade"
    tools:context=".Charts.IncomeExpenseActivity">

    <include
        android:id="@+id/chartToolbarId"
        layout="@layout/toolbar_layout" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/chartToolbarId">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:orientation="horizontal"
                android:paddingStart="20dp">

                <EditText
                    android:id="@+id/fromDateId"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:focusable="false"
                    android:hint="From" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:text="To"
                    android:textColor="#0E0E0E"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/toDateId"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="20dp"
                    android:focusable="false"
                    android:hint="To" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/graphApplyButtId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:text="Apply"
                    app:cornerRadius="10dp" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:layout_marginTop="15dp"
                android:background="#070707" />

            <LinearLayout
                android:layout_width="match_parent"
                android:background="#ffffff"
                android:layout_height="wrap_content">
            <FrameLayout
                android:id="@+id/graphFrameLayoutId"
                android:layout_width="300dp"

                android:layout_height="300dp"
                android:layout_marginStart="50dp"
                android:layout_marginTop="30dp">

            </FrameLayout>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:layout_marginTop="5dp"
                android:background="#070707" />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:orientation="horizontal"
                        android:paddingStart="20dp">

                        <TextView

                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:text="Total Tuition Fee-"
                            android:textColor="#0C0C0C"
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/TotalTuitionFeeValId"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="30dp"
                            android:text="Tuition Fee"
                            android:textColor="#0C0C0C"
                            android:textSize="15sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingStart="20dp">

                        <TextView

                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:text="Total Registration Fee-"
                            android:textColor="#0C0C0C"
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/TotalRegFeeValId"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="30dp"
                            android:text="Registration Fee"
                            android:textColor="#0C0C0C"
                            android:textSize="15sp" />
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingStart="20dp">

                        <TextView

                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:text="Total Extra Income-"
                            android:textColor="#0C0C0C"
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/TotalExtraValId"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="30dp"
                            android:text="Extra Income"
                            android:textColor="#0C0C0C"
                            android:textSize="15sp" />
                    </LinearLayout>

                    <View
                        android:layout_width="wrap_content"
                        android:layout_height="2dp"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginEnd="15dp"
                        android:layout_marginBottom="5dp"
                        android:background="#040404" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingStart="20dp">

                        <TextView

                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:text="Total Income-"
                            android:textColor="#0C0C0C"
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/incomeValId"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="30dp"
                            android:text="Income"
                            android:textColor="#0C0C0C"
                            android:textSize="15sp" />
                    </LinearLayout>

                    <View
                        android:layout_width="wrap_content"
                        android:layout_height="3dp"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginEnd="15dp"
                        android:layout_marginBottom="5dp"
                        android:background="#040404" />
                </LinearLayout>

            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal"
                        android:paddingStart="20dp">

                        <TextView

                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:text="Total Teachers Expense-"
                            android:textColor="#0C0C0C"
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/TeachersExpenseValId"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="30dp"
                            android:text="Expense"
                            android:textColor="#0C0C0C"
                            android:textSize="15sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingStart="20dp">

                        <TextView

                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:text="Total Extra Expense-"
                            android:textColor="#0C0C0C"
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/ExtraExpenseValId"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="30dp"
                            android:text="Expense"
                            android:textColor="#0C0C0C"
                            android:textSize="15sp" />
                    </LinearLayout>

                    <View
                        android:layout_width="wrap_content"
                        android:layout_height="2dp"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginEnd="15dp"
                        android:layout_marginBottom="5dp"
                        android:background="#040404" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:orientation="horizontal"
                        android:paddingStart="20dp">

                        <TextView

                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:text="Total Expense-"
                            android:textColor="#0C0C0C"
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/expenseValId"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="30dp"
                            android:text="Expense"
                            android:textColor="#0C0C0C"
                            android:textSize="15sp" />
                    </LinearLayout>
                    <View
                        android:layout_width="wrap_content"
                        android:layout_height="3dp"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginEnd="15dp"
                        android:layout_marginBottom="5dp"
                        android:background="#040404" />
                </LinearLayout>

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="horizontal"
                android:paddingStart="20dp"
                android:layout_marginBottom="10dp">

                <TextView

                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="Total Profit-"
                    android:textColor="#0C0C0C"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/profitValId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:text="Profit"
                    android:textColor="#0C0C0C"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/profitOrLossId"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
               android:gravity="end"
                    android:text="Profit"
                    android:layout_marginEnd="10dp"
                    android:textColor="#0C0C0C"
                    android:textSize="20sp" />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>


</RelativeLayout>